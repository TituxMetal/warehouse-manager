# Stage 1: Install dependencies and build the application
FROM oven/bun:1.3.5-alpine AS build

WORKDIR /app

COPY package.json bun.lock ./
COPY apps/api/ ./apps/api/
COPY apps/web/ ./apps/web/
COPY packages/ ./packages/

# Install all dependencies
RUN bun install --filter @app/web --frozen-lockfile

# Set environment variables for the build
ARG PUBLIC_API_URL
ENV PUBLIC_API_URL=$PUBLIC_API_URL

# Build the application
RUN bun run --filter @app/web build

# Stage 2: Production
FROM oven/bun:1.3.5-alpine AS production

# Create non-root user and group
RUN addgroup -S appgroup && adduser -S appuser -G appgroup

WORKDIR /app

# Copy minimal files for production
COPY --from=build /app/node_modules ./node_modules
COPY --from=build /app/package.json /app/bun.lock ./
COPY --from=build /app/apps/api/package.json ./apps/api/
COPY --from=build /app/apps/web/package.json ./apps/web/
COPY --from=build /app/packages ./packages/

# Install only production dependencies
RUN bun install --filter @app/web --frozen-lockfile --production

# Copy built app
COPY --from=build /app/apps/web/dist ./apps/web/dist

# Set environment variables for production runtime
ENV NODE_ENV=production
ENV HOST=0.0.0.0
ENV PORT=4321

# Change ownership of the app directory
RUN chown -R appuser:appgroup /app

EXPOSE ${PORT}

USER appuser

# Start the application using Bun
CMD ["bun", "run", "apps/web/dist/server/entry.mjs"]
