{
  "name": "warehouse-manager",
  "version": "0.1.0",
  "private": true,
  "description": "Fullstack app with NestJS api and Astro frontend",
  "keywords": [
    "monorepo",
    "turbo",
    "nestjs",
    "astro",
    "react",
    "authentication"
  ],
  "author": "Titux Metal",
  "license": "MIT",
  "packageManager": "bun@1.3.5",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "start": "turbo run start",
    "docker:build:all": "scripts/docker-build.sh all",
    "docker:build:api": "scripts/docker-build.sh api",
    "docker:build:web": "scripts/docker-build.sh web",
    "docker:push": "turbo run docker:push --parallel",
    "test": "turbo run test",
    "test:coverage": "turbo run test:coverage",
    "test:watch": "turbo run test:watch --parallel",
    "lint": "turbo run lint",
    "lint:check": "turbo run lint:check",
    "typecheck": "turbo run typecheck",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "audit": "bun pm pack --dry-run",
    "clean": "turbo run clean && rm -rf .turbo",
    "reset": "bun run clean && rm -rf node_modules bun.lock && bun install",
    "prepare": "husky",
    "commit": "cz",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "turbo run build --filter=./packages/* && changeset publish"
  },
  "dependencies": {
    "better-auth": "^1.4.7"
  },
  "devDependencies": {
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.1.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/eslintrc": "^3.3.1",
    "@types/node": "^24.10.1",
    "commitizen": "^4.3.1",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^9.39.1",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.6.2",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-tailwindcss": "^0.7.1",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "engines": {
    "bun": ">=1.2.0"
  },
  "lint-staged": {
    "apps/api/**/*.{ts,js}": [
      "bash -c 'cd apps/api && eslint --fix \"$@\"' --",
      "prettier --write"
    ],
    "apps/web/**/*.{ts,tsx,astro}": [
      "bash -c 'cd apps/web && eslint --fix \"$@\"' --",
      "prettier --write"
    ],
    "packages/eslint-config/**/*.{ts,js,mjs}": [
      "prettier --write"
    ],
    "**/*.{json,md,yml,yaml}": [
      "prettier --write"
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
